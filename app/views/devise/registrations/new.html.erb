<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.input :first_name, autofocus: true %></div>

  <div><%= f.input :last_name, autofocus: true %></div>

  <div><%= f.input :areas, :as => :check_boxes, :collection => ["England", "Wales", "Scotland", "Northern Ireland"] %></div>

  <div><%= f.input :email, autofocus: true %></div>

  <div><%= f.input :password, autocomplete: "off" %></div>

  <div><%= f.input :password_confirmation, autocomplete: "off" %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
